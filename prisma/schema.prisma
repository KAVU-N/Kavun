generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Resource {
  id            Int      @id @default(autoincrement())
  title         String
  description   String   @db.Text
  author        String
  category      String
  format        String
  level         String?
  university    String?
  department    String?
  fileSize      String?
  tags          String[] @default([])
  url           String?
  fileData      String?  @db.Text // Base64 formatÄ±nda dosya verisi
  fileName      String?
  fileType      String?
  downloadCount Int      @default(0)
  viewCount     Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([category])
  @@index([university])
  @@index([format])
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    String
  title     String
  message   String
  type      String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  actionUrl String?
}
